<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE daodefinition SYSTEM "dao.dtd">
<daodefinition version="1">

	<datasource>
		<tables>
		<table name="copixuser" tablename="copixuser" primary="yes"/>
		</tables>
	</datasource>

	<properties>
		<property name="id_cusr" fieldname="id_cusr" type="autoincrement" table="copixuser" pk="yes"/>
		<property name="login_cusr" fieldname="login_cusr" type="string" table="copixuser" pk="no"/>
		<property name="password_cusr" fieldname="password_cusr" type="string" table="copixuser" pk="no"/>
		<property name="email_cusr" fieldname="email_cusr" type="string" table="copixuser" pk="no"/>
	</properties>
	<methods>
		<method name="getByLogin" type="select">
			<parameters>
				<parameter name="login" />
			</parameters>
			<conditions>
				<condition property="login_cusr" operator="=" value="$login" />
			</conditions>
		</method>
	</methods>
</daodefinition>
