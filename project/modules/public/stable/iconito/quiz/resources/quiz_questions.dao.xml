        </properties>
        <methods>
            <method name="getQuestionsForQuiz" type="select">
                <parameters>
                    <parameter name="qId" />
                </parameters>
                <conditions>
                    <condition property="id_quiz" value="$qId" operator="=" />
                </conditions>
                <order>
                    <orderitem property="order" way="asc" />
                </order>
            </method>
        </methods>
</daodefinition>