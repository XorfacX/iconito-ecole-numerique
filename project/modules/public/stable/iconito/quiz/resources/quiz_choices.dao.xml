        </properties>
        <methods>
            <method name="getChoices" type="select">
                <parameters>
                    <parameter name="qId" />
                </parameters>
                <conditions>
                    <condition property="id_question" value="$qId" operator="=" />
                </conditions>
                <order>
                    <orderitem property="position" way="asc" />
                </order>
            </method>
    </methods>
</daodefinition>