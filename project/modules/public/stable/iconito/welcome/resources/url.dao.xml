<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE daodefinition SYSTEM "dao.dtd">
<daodefinition version="1">
	<datasource>
		<tables>
			<table name="module_welcome_url" tablename="module_welcome_url" primary="yes"/>
		</tables>
	</datasource>
	<properties>
		<!-- TABLE TEST VERSION -->
		<property name="url"       fieldname="url"       type="string"  table="module_welcome_url" pk="yes"/>
		<property name="node_type" fieldname="node_type" type="string"  table="module_welcome_url" pk="no"/>
		<property name="node_id"   fieldname="node_id"   type="integer" table="module_welcome_url" pk="no"/>
	</properties>
	<methods>
		<method name="getBuUrl" type="select">
			<parameters>
				<parameter name="url" />
			</parameters>
			<conditions>
				<condition property="url" operator="=" value="$url" />
			</conditions>
			<order>
				<orderitem property="node_type" way="asc" />
				<orderitem property="node_id"   way="asc" />
			</order>
		</method>
		<method name="getByNode" type="select">
			<parameters>
				<parameter name="node_type" />
				<parameter name="node_id"   />
			</parameters>
			<conditions>
				<condition property="node_type" operator="=" value="$node_type" />
				<condition property="node_id"   operator="=" value="$node_id"   />
			</conditions>
			<order>
				<orderitem property="url" way="asc" />
			</order>
		</method>
	</methods>
</daodefinition>
